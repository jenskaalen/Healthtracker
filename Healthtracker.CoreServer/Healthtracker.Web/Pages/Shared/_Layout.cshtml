<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healthtracker.Web</title>


    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/main.bundle.css" asp-append-version="true" />
    @* TODO: lodash to npm *@
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.11/lodash.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://kit.fontawesome.com/edd4025de2.js"></script>

    <script src="~/moment.js"></script>
</head>
<body>
    <section class="">
        <div class="level navbar-section">
            <div class="level-item has-text-centered">
                <a class="button is-large" href="/">
                    <span class="icon is-medium">
                        <i class="fas fa-notes-medical fa-2x"></i>
                    </span>
                </a>
                <a class="button is-large"  href="/Integrations">
                    <span class="icon is-medium">
                        <i class="fas fa-plug fa-2x"></i>
                    </span>
                </a>
            </div>
        </div>
    </section> 

    @{ if (!User.Identity.IsAuthenticated)
        {
            <div class="section">
                <div class="container">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        } }

    @*<partial name="_CookieConsentPartial" />*@

    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
            <p>&copy; 2019 - Healthtracker.Web</p>
        </footer>*@
    </div>
   

    @RenderSection("Scripts", required: false)

    <script src="~/js/bundle.js" type="module"></script>
</body>
</html>
