@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm">
        <div class="navbar">
            <div class="navbar-end">
                <a class="navbar-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                <a class="navbar-item">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                </a>
            </div>
        </div>
    </form>
}
else
{
    <div class="nav navbar-nav navbar-right">
        <div class="navbar-end">
            <a class="navbar-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="navbar-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
}
